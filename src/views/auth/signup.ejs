<!DOCTYPE html>
<html lang="pt-BR">
<%- include("../partials/head", { title: "Criar Conta | EasyClass" }) %>

    <body>
        <%- include("../partials/authnav", { appname: "EasyClass" , link: "Login" }) %>

            <section class="user-level">
                <div class="levels">
                    <div class="level user-student" data-type="user-student">
                        <h2>Estudante</h2>
                        <span class="icon"><i class="fas fa-book"></i></span>
                    </div>
                    <div class="level user-teacher" data-type="user-teacher">
                        <h2>Professor</h2>
                        <span class="icon"><i class="fas fa-user-check"></i></span>
                    </div>
                    <div class="level user-admin" data-type="user-admin">
                        <h2>Coordenador de Turma</h2>
                        <span class="icon"><i class="fas fa-cog"></i></span>
                    </div>
                </div>
            </section>

            <main class="auth-container hide">
                <section class="main-form">
                    <h1>Criar Conta</h1>
                    <form id="sign-form">

                        <div class="form-step active">
                            <div class="grid-input">
                                <div class="form-group">
                                    <label for="firstname">Nome</label>
                                    <input type="text" name="firstname" placeholder="Insira o seu primeiro nome"
                                        required />
                                </div>
                                <div class="form-group">
                                    <label for="lastname">Sobrenome</label>
                                    <input type="text" name="lastname" placeholder="Insira o seu sobrenome" required />
                                </div>
                            </div>
                            <div class="form-buttons">
                                <button type="button" class="next-btn">Próximo <i
                                        class="fas fa-angles-right"></i></button>
                            </div>
                        </div>

                        <div class="form-step">
                            <div class="grid-input">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" name="email" placeholder="Insira o seu email" required />
                                </div>
                                <div class="form-group">
                                    <label for="password">Senha</label>
                                    <input type="password" name="password" placeholder="Insira a sua senha"
                                        id="input-password" required />
                                    <i class="fas fa-eye icon-eye" id="toggle-password"></i>
                                </div>
                            </div>
                            <div class="form-buttons">
                                <button type="button" class="prev-btn">Voltar<i class="fa fa-angles-left"></i></button>
                                <button type="button" class="next-btn">Próximo <i
                                        class="fas fa-angles-right"></i></button>
                            </div>
                        </div>

                        <div class="form-step">
                            <div id="extra-fields"></div>
                            <div class="form-buttons">
                                <button type="button" class="prev-btn">Voltar <i
                                        class="fas fa-angles-left"></i></button>
                                <button type="button" class="next-btn">Proximo <i
                                        class="fas fa-angles-right"></i></button>
                            </div>
                        </div>

                        <div class="form-step">
                            <p>Clique em Cadastrar para a criacao da sua conta.</p>
                            <div class="form-buttons">
                                <button type="submit">Cadastrar</button>
                            </div>
                        </div>
                    </form>

                    <span class="sign-up">
                        <p>Já tem uma conta?</p>
                        <a href="/login">Iniciar Sessão</a>
                    </span>
                </section>
            </main>

            <%- include("../partials/footer") %>
                <script>
                    const togglePassword = document.querySelector(".icon-eye");
                    togglePassword.addEventListener("click", () => {
                        if (inputPassword.type == "password") {
                            inputPassword.type = "text";
                            togglePassword.classList.toggle("fa-eye-slash");
                        } else {
                            inputPassword.type = "password";
                            togglePassword.classList.toggle("fa-eye");
                        }
                    });
                </script>

                <!-- <script src="/assets/js/signup.js"></script> -->
                <script src="/assets/js/fetch.js"></script>
                <script src="/assets/js/forms.js"></script>
    </body>

</html>